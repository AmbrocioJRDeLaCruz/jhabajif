    <LinearLayout
        android:id="@+id/listButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp">

        <Button
            android:id="@+id/btn_longitud"
            android:layout_width="@dimen/unitButton"
            android:layout_height="@dimen/unitButtonHeight"
            android:drawableTop="@drawable/ic_baseline_straighten_24"
            android:text="@string/longitud"
            android:theme="@style/ButtonLongitud"
            android:onClick="btn_longitud"/>

        <Button
            android:id="@+id/btn_tiempo"
            android:layout_width="@dimen/unitButton"
            android:layout_height="@dimen/unitButtonHeight"
            android:drawableTop="@drawable/ic_baseline_access_time_24"
            android:text="@string/tiempo"
            android:theme="@style/ButtonTiempo"
            android:onClick="btn_tiempo"/>

        <Button
            android:id="@+id/btn_masa"
            android:layout_width="@dimen/unitButton"
            android:layout_height="@dimen/unitButtonHeight"
            android:drawableTop="@drawable/ic_baseline_balance_24"
            android:text="@string/masa"
            android:theme="@style/ButtonMasa"
            android:onClick="btn_masa" />

        <Button
            android:id="@+id/btn_Temperatura"
            android:layout_width="@dimen/unitButton"
            android:layout_height="@dimen/unitButtonHeight"
            android:drawableTop="@drawable/ic_outline_device_thermostat_24"
            android:text="@string/temperatura"
            android:theme="@style/ButtonTemperatura"
            android:onClick="btn_temperatura"/>

    </LinearLayout>

